<main role="main">


  <div id="myCarousel" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1"></li>
      <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <div class="carousel-inner">
      <div class="carousel-item active">
        <img class="bd-placeholder-img" width="100%" height="70%" src="https://images.unsplash.com/photo-1490707967831-1fd9b48e40e2?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=3150&q=80"
          role="img" />
        <div class="container">
          <div class="carousel-caption text-left">
               <h1 style="font-family: 'Playfair Display', serif; font-size:60px; font-weight:900;" class="display-4 font-weight-normal">RENT</h1>
                  <p  style="font-family: 'Raleway', sans-serif; font-weight: 900; font-size:35px;" class="lead font-weight-normal">Dresses from Designers</p>

          </div>
        </div>
      </div>
    
    </div>

  </div>



  <!--FILTER BAR --->
  <!--//filtros para que aparezcan los vestidos dependiendo de la categoria --->
  <br>
  <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
    <button href="" style="color:#6c757d" type="button" class="btn">All</button>
    <button href="" style="color:#6c757d" type="button" class="btn" id="cocktailsbtn">Cocktails</button>
    <button href="" style="color:#6c757d" type="button" class="btn" id="gownbtn">Evening Gowns</button>

    <div class="btn-group" role="group">
      <button style="color:#6c757d" id="btnGroupDrop1" type="button" class="btn dropdown-toggle" data-toggle="dropdown"
        aria-haspopup="true" aria-expanded="false">
        Sizes
      </button>
      <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
        <a class="dropdown-item" href="#">1</a>
        <a class="dropdown-item" href="#">3</a>
      </div>
    </div>
  </div>
  <!-- FILTER --->
  <div class="container">
    <div class="row">
      {{#each collections}}
      <div class="row">
        <div class="album">
          <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
              <img class="bd-placeholder-img card-img-top" width="100%" height="225" src={{image}}>
              <div class="card-body">
                <h1>{{name}}</h1>
                <div class="d-flex justify-content-between align-items-center">
                  <h3>${{price}}</h3>
                  <br>
                  <div class="btn-group">
                    <button type="button" href="/roto" class="btn btn-sm btn-outline-secondary">See More</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
     </div>
